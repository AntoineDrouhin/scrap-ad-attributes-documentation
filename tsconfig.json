{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": false,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noImplicitReturns": false,
    "noUnusedLocals": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noEmitOnError": true,
    "outDir": "dist",
    "lib": ["es6", "es7", "dom", "es2017"]
  },
  "include": [
    "src/**/*",
    "scripts/**/*",
    "typings/*.d.ts"
  ],
  "exclude": ["dist", "build", "trash", "node_modules", "**/*.test.ts", "locales", "schemas"]
}
